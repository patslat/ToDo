<form action="<%= new_team_project_item_url(@team, @project) %>"
      method="post">

  <input type="hidden"
         name="authenticity_token"
         value="form_authenticity_token">

  <label for="item_title">Title:</label>
  <input type="text" name="item[title]" id="item_title">

  <label for="item_description">Description:</label>
  <input type="text" name="item[description]" id="item_description">

  <input type="hidden" name="item[completion]" value="false">

  <input type="submit" value="Submit Item">

</form>